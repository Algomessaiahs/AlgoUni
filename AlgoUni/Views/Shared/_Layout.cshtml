<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-4"><h1>Rencata University</h1><p></p></div>
    </div>
   
    <ul class="nav navbar navbar-expand-lg ">
        <li class="nav-item">
            <a id="home-tab2" style="text-decoration:none;" class="nav-link" href="@Url.Action("Index", "Home")">Home
            </a>
        </li>
        <li class="nav-item ">
            <a id="home-tab2" class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
            
        </li>
        <li class="nav-item ">
            <a id="home-tab2" class="nav-link" href="@Url.Action("Contact", "Home")">Contact Us
                
            </a>
        </li>
    </ul>
    <div class="container body-content">
        @RenderBody()
      <style>
          body,header,footer{
              background-color:mediumpurple;
              color:aliceblue;
          }
          #home-tab2 {
              text-decoration: none;
              text-decoration-color: none;
              font-weight:700;
              color:aliceblue;
          }
      </style>
        <footer>
          
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
