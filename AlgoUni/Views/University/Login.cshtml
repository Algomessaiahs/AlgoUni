@model AlgoUni.Models.Membership

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}


<body class="">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                   <h3 class="text-center font-weight-light my-4">Login</h3>
                                </div>
                                <div class="card-body align-content-center">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()



                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group row g-3 align-middle">
                                            @*<div class="mb-2">*@
                                            @*@Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                            @*</div>*@
                                            <div class="form-floating mb-3 mt-3">
                                                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter email" } })
                                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                                                @*<label for="email">Email</label>*@
                                                @Html.LabelFor(model => model.EmailId)
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row g-3 align-items-center form-floating">
                                            @*<div class="mb-2">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>*@
                                            <div class="form-floating mb-3 mt-3">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter password" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                @Html.LabelFor(model => model.Password)
                                            </div>
                                        </div>
                                        <center>
                                            <input type="submit" value="Login" class="btn btn-primary mb-1" />
                                        </center>
                                        <br />

                                        @*<div class="form-group m-1">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-primary" />
                        <a class="btn btn-light text-lg-center float-end" href=" @Url.Action("Register", "University")">
                            Register
                        </a>
                    </div>
                </div>*@

                                    }
                                </div>
                                <div class="card-footer text-center py-3">
                                    <p>
                                        For new user 
                                        <a class="link-primary" href=" @Url.Action("Register", "University")">Click here...!</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

        @*<div>
                @Html.ActionLink("Back to Register", "Register")
            </div>*@

    </div>
</body>
                                @section Scripts {
                                    @Scripts.Render("~/bundles/jqueryval")
                                }
